# API Server Configuration Example
# Copy this to .env and modify values as needed

# Basic Authentication
API_USERNAME=admin
API_PASSWORD=admin123

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TASK_TOPIC=tts_tasks
KAFKA_RESULT_TOPIC=tts_results
KAFKA_TTS_CONSUMER_GROUP=tts_workers
KAFKA_UPLOAD_CONSUMER_GROUP=upload_workers

# S3 Configuration
S3_ACCESS_KEY=your_access_key_here
S3_SECRET_KEY=your_secret_key_here
S3_BUCKET_NAME=ls-tts
S3_REGION=auto

# S3-Compatible Service Endpoints (choose one):
# For AWS S3 (leave S3_ENDPOINT_URL empty)
# S3_ENDPOINT_URL=
# S3_PUBLIC_URL=

# For Cloudflare R2
# S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
# S3_PUBLIC_URL=https://your-custom-domain.com  # Optional: Custom domain or CDN URL

# For MinIO (local testing)
# S3_ENDPOINT_URL=http://localhost:9000
# S3_PUBLIC_URL=http://localhost:9000/ls-tts  # Public access URL with bucket

# For other S3-compatible services
# S3_ENDPOINT_URL=https://your-s3-compatible-service.com
# S3_PUBLIC_URL=https://your-public-cdn-domain.com  # Optional: CDN or public domain

# Worker Configuration
TTS_WORKERS=1
UPLOAD_WORKERS=1
